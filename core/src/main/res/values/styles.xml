<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Tema za Login i Registraciju -->
    <style name="LoginIRegistracijaTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="LoginIRegistracijaTheme.Heading">
        <item name="android:fontFamily">@font/indigo_daisy</item>
        <item name="android:textSize">@dimen/heading_fontSize</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="LoginIRegistracijaTheme.Subtitle">
        <item name="android:textSize">@dimen/subtitle_fontSize</item>
        <item name="android:layout_marginStart">50dp</item>
    </style>
    <style name="LoginIRegistracijaTheme.InputField">
        <item name="android:textSize">@dimen/editText_fontSize</item>
    </style>
    <style name="LoginIRegistracijaTheme.button">
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <!--MAIN MENU TEMA -->
    <style name="MainMenuTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>
    <style name="MainMenuTheme.Button">
        <item name="android:textSize">@dimen/mainMenuButton_fontSize</item>
    </style>

    <!-- SINGLEPLAYER -->
    <style name="SingleplayerTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>
    <style name="SingleplayerTheme.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/foreground</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="SingleplayerTheme.Answers">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SingleplayerTheme.Submit">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SingleplayerTheme.Question">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--INFO -->
    <style name="InfoTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="InfoTheme.Headings">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:background">@color/lightColorPrimary</item>
    </style>
    <style name="InfoTheme.Text">
        <item name="android:textSize">10sp</item>
    </style>
</resources>